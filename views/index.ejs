    <body>

        <div class="container">

            <div class="page-header">
            </div>

            <div class="panel panel-default">
                <div class="panel-body">

                    <% if (!isAuthenticated) { %>
                        <h1 class="text-center">Hello, please make yourself known. </h1> 
                        <a type="button" class="btn btn-primary btn-lg btn-block" role="button" href="/login">Log in</a>
                        <a type="button" class="btn btn-primary btn-lg btn-block" role="button" href="/register">Sign up</a>
                    <% } else { %>
                        <h1 class="text-center">Hello, <%= user.name %>! </h1> 
                    <p>
                        <a type="button" class="btn btn-primary btn-lg btn-block" role="button" href="/logout">Log out</a>
                    <% } %>
                </div>
            </div>

        </div> <!-- /container -->

        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
    </body>
